# Database
# Replace with your PostgreSQL connection string
DATABASE_URL="postgresql://autocoder:your_password_here@localhost:5432/autocoder"

# PostgreSQL Docker password (used by docker-compose.yml)
POSTGRES_PASSWORD="your_password_here"

# Better Auth
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET="your_32_character_minimum_secret_here_replace_this"

# Base URL for auth callbacks (no trailing slash)
BETTER_AUTH_URL="http://localhost:3000"

# Node environment
NODE_ENV="development"
